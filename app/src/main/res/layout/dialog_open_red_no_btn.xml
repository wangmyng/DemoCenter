<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="128dp">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bg_open_red_no_btn" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/img_bg"
        android:layout_alignEnd="@id/img_bg"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.4"
        android:paddingStart="38dp"
        android:paddingEnd="40dp"
        android:text="恭喜您达成今日走路目标，获得200元京东E卡！为防止过时作废，请及时领取。"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@id/img_bg"
        android:layout_alignStart="@id/img_bg"
        android:layout_alignEnd="@id/img_bg"
        android:visibility="invisible"
        android:src="@mipmap/btn_open_red_close" />

</RelativeLayout>