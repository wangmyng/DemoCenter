<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/bg_get_prize_long" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_cancel"
        android:layout_alignStart="@id/img_bg"
        android:layout_alignEnd="@id/img_bg"
        android:layout_marginBottom="18dp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.4"
        android:paddingStart="28dp"
        android:paddingEnd="28dp"
        android:text="尊敬的用户，领取红包需开通泰康钱包，钱包开通之后，红包金额会自动发放至泰康钱包中，是否确认开通泰康钱包。"
        android:textColor="#F9F31E"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_bg"
        android:layout_alignStart="@id/img_bg"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerInside"
        android:src="@mipmap/btn_cancel" />

    <ImageView
        android:id="@+id/btn_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/img_bg"
        android:layout_alignBottom="@id/img_bg"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:scaleType="centerInside"
        android:src="@mipmap/btn_enable" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@id/img_bg"
        android:layout_alignStart="@id/img_bg"
        android:layout_alignEnd="@id/img_bg"
        android:layout_marginTop="20dp"
        android:src="@mipmap/btn_open_red_close" />

</RelativeLayout>